- quest_info.tasks.each do |task|
  .type Task: #{human_quest_type(task[:type])}
  - if task[:map]
    .map Area: #{link_to task[:map], task[:map]}
  - unless task[:position].first.zero?
    .position Position: #{task[:position].join(", ")}
  - if task[:target]
    .target Target: #{link_to task[:target], task[:target]}
  %br

= render "/share/development_box", :model => quest_info