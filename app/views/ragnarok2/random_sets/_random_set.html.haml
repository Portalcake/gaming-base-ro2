- return unless random_set.hidden_item
%div[random_set]
  .random_set_icon= ragnarok2_icon_image_tag(random_set.hidden_item.icon, :alt=>"")
  .name
    = link_to(random_set.hidden_item, random_set.hidden_item)
    - if random_set.setbox_type.zero?
      = surround "(", ")" do
        random
  .description
    = pluralize random_set.package, "piece"
    - if random_set.setbox_type.zero?
      = surround "(", ")" do
        #{random_set.ratio.to_f/1000}%
